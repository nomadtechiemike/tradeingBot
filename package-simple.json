{
  "name": "trading-bot",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "install:all": "npm install",
    "build": "tsc --project tsconfig-simple.json",
    "dev": "npm run build && npm run start",
    "start": "node dist/index.js",
    "api": "node dist/api.js",
    "worker": "node dist/worker.js",
    "web": "npm run web:build && npm run web:serve",
    "web:build": "vite build --config vite.config.ts",
    "web:serve": "vite preview --config vite.config.ts --port 5173"
  },
  "dependencies": {
    "fastify": "^4.25.1",
    "@fastify/cors": "^8.5.0",
    "@fastify/static": "^6.12.0",
    "@fastify/rate-limit": "^9.0.1",
    "pg": "^8.11.3",
    "drizzle-orm": "^0.29.1",
    "axios": "^1.6.7",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "@vitejs/plugin-vue": "^5.0.4",
    "vue": "^3.3.12",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.11.2"
  }
}
